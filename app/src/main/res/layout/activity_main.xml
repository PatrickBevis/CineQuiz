<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue"
    tools:context="com.example.cinequiz.controller.MainActivity">


    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Bienvenue au Ciné Quiz !"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/activity_main_img"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/clap" />

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:hint="Tapez votre prénom (obligatoire)" />


    <Button
        android:id="@+id/activity_main_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="JOUONS !"

        />

    <TextView
        android:id="@+id/activity_main_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="Version : Open Source"
        android:textColor="#ffffff"
        android:textSize="15dp" />

</LinearLayout>